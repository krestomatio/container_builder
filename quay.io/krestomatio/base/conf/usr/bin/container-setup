#!/bin/bash -e
# description: base config for container

# dir for optional entrypoint scripts
mkdir -p ${CTR_entrypoint_opt_path}

# custom user
cuser-set

# specific timezones
if ! [ -z ${TZ+x} ]; then
    if ! [ -z ${AVAILABLE_TZs+x} ]; then
        timezone-set ${AVAILABLE_TZs} ${TZ}
    else
        timezone-set ${TZ}
    fi
fi

# permissions
rpm-file-permissions
