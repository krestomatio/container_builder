#!/bin/bash -e
# description: script for installing packages
# param: list of pkgs separated by space

# install packages
if ! [ -z ${@+x} ]; then
    # update
    ${CTR_pkg_mgm} update
    # install
    ${CTR_pkg_mgm} install ${@}
    # clean
    ${CTR_pkg_mgm} clean all
else
    echo "No parameter for packages to install"
fi
