#!/bin/bash -e
# description: entrypoint script for container

# source other script
for f in ${CTR_ENTRYPOINT_OPT_PATH}/*; do
    if [ -f "$f" ]; then
        if [[ ! -x "$f" || "${f##*.}" == "source" ]]; then
            echo "$0: sourcing $f"
            . "$f"
        fi
    fi
done

# exec other script
for f in ${CTR_ENTRYPOINT_OPT_PATH}/*; do
    if [ -f "$f" ]; then
        if [[ -x "$f" && "${f##*.}" != "source" ]]; then
            echo "$0: running $f"
            "$f"
        fi
    fi
done

# first arg is `-f` or `--some-option
if [ "${1#-}" != "$1" ]; then
    if ! [ -z ${CTR_CMD+x} ]; then
	       set -- ${CTR_CMD} "$@"
    fi
fi

exec "$@"
